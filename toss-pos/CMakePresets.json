{
  "version": 6,
  "vendor": {
    "tossplace": {
      "autoFormat": true
    }
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Base configuration with vcpkg toolchain",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_MODE": "ON",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      },
      "environment": {
        "VCPKG_FEATURE_FLAGS": "manifests"
      }
    },
    {
      "name": "windows-x64",
      "displayName": "Windows x64 (MSVC 2022)",
      "description": "Build for Windows 10+ using Visual Studio 2022 and vcpkg",
      "inherits": "default",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Debug build for Windows with Visual Studio 2022",
      "inherits": "windows-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-x64",
      "displayName": "macOS x64 (Intel)",
      "description": "Build for macOS 10.15+ on Intel Macs using Apple Clang",
      "inherits": "default",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-osx",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_OSX_ARCHITECTURES": "x86_64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-x64-debug",
      "displayName": "macOS x64 Debug",
      "description": "Debug build for macOS Intel",
      "inherits": "macos-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-arm64",
      "displayName": "macOS ARM64 (Apple Silicon)",
      "description": "Build for macOS 11+ on Apple Silicon (M1/M2/M3) using native architecture",
      "inherits": "default",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 Debug",
      "description": "Debug build for macOS ARM64 (Apple Silicon)",
      "inherits": "macos-arm64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "configurePreset": "windows-x64",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "configurePreset": "windows-x64-debug",
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "macos-x64-release",
      "displayName": "macOS Intel Release",
      "configurePreset": "macos-x64",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "macos-x64-debug",
      "displayName": "macOS Intel Debug",
      "configurePreset": "macos-x64-debug",
      "configuration": "Debug",
      "jobs": 4
    },
    {
      "name": "macos-arm64-release",
      "displayName": "macOS ARM64 Release",
      "configurePreset": "macos-arm64",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 Debug",
      "configurePreset": "macos-arm64-debug",
      "configuration": "Debug",
      "jobs": 4
    }
  ],
  "testPresets": [
    {
      "name": "default-test",
      "configurePreset": "default",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsFailureMessage": "No tests found",
        "stopOnFailure": false
      }
    }
  ]
}
